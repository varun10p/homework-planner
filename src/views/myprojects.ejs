<h1 class="mt-4">My Projects</h1>
<% include ./partials/messages %>
<p>
  <a href="/projects/add" class="btn btn-success">Create Project</a>
</p>

<ul>
  <%projects.forEach(function(project){%>
  <%if(project.creator == user._id){%>
  <div class="container">
    <div class="jumbotron">
      <h1 class="display-3"><a href="/projects/<%=project._id %>"><%=project.title%></a></h1>
      <p> Tasks:</p>
      <p class="lead"><%=project.description%></p>
      <%for (i = 0; i < project.projecttasks.length; i++) {%>
      <p><b>Title:</b> <%=project.projecttasks[i].title%> <b>Description:</b> <%=project.projecttasks[i].description%>
        <b>Recipient:</b> <a href="mailto:<%=project.projecttasks[i].recipient%>"
          target="_blank"><%=project.projecttasks[i].recipient%></a></p>
      <%}%>
      <hr class="my-4">
      <p> Due Date: <%=project.duedate%></p>
      <a href="/projects/edit/<%=project._id %>" class="btn btn-info">Edit</a>
    </div>
  </div>

  <%}%>
  <%});%>
</ul>